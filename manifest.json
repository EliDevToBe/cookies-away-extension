{
    "manifest_version": 3,
    "name": "CookiesAway",
    "description": "modifie l'apparence des cookies Dark Patterns",
    "version": "1.0",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "popUp.js"
    },
    "action": {
        "default_popup": "popUp.html"
    },
    "content_scripts": [
        {
            "js": [
                "contentScript.js"
            ],
            "matches": [
                "https://*.carrefour.fr/*",
                "<all_urls>"
            ],
            "css": [
                "popUp.css"
            ]
        }
    ]
}