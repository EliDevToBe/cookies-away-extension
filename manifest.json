{
    "manifest_version": 3,
    "name": "CookiesAway",
    "description": "modifie l'apparence des cookies Dark Patterns",
    "version": "1.0",
    "action" : {
        "default_popup" : "popUp.html"

    },
    "content_scripts": [
        {
            "js": [
                "contentScript.js"
            ],
            "matches": [
                "https://*.carrefour.fr/*",
                "<all_urls>"
            ],
            "css": [
                "cookieStyle.css"
            ]
        }
    ]
}